@model UserUpdateViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgileri Düzenle</h4>
            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                    <input type="text" asp-for="@Model.namesurname" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>
                    <input type="text" asp-for="@Model.username" class="form-control" readonly="readonly" />
                </div>
                
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    <input type="email" asp-for="@Model.mail" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Yeni Şifre</label>
                    <input type="password" asp-for="@Model.password" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Foto Yol</label>
                    <input type="text" asp-for="@Model.imageurl" class="form-control" />
                </div>

                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">Iptal</button>
            </form>
        </div>
    </div>
</div>

