@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yeni Mesaj Gönder</h1>

<br />

@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
    @Html.Label("Alıcı Email")
    @Html.TextBoxFor(x => x.ReceiverMail, new {@class = "form-control"})

    <br />

    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Subject, new {@class = "form-control"})

    <br />

    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageDetails,10,3, new {@class = "form-control"})

    <br />

    <button class="btn btn-info">Gönder</button>

}


