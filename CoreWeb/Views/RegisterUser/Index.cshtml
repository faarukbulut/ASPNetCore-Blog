@model UserSignUpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/admin-tema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin-tema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/admin-tema/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/admin-tema/css/animate.css" rel="stylesheet">
    <link href="~/admin-tema/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h5 class="logo-name">IN+</h5>

            </div>
            <h3>Kayıt Ekranı</h3>
            <p>Yeni bir hesap oluşturun</p>

            <form class="m-t" role="form" asp-action="Index">

                <div class="form-group">
                    <input type="text" class="form-control" asp-for="@Model.NameSurname" placeholder="Ad Soyad" required="">
                    <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="email" class="form-control" asp-for="@Model.Mail" placeholder="Email" required="">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="Kullanıcı Adı" required="">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Şifre" required="">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Şifre Tekrar" required="">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Kullanım şartlarını okudum, onaylıyorum. </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Zaten bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Login/Index">Giriş Yap</a>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            </form>


        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/admin-tema/js/jquery-3.1.1.min.js"></script>
    <script src="~/admin-tema/js/popper.min.js"></script>
    <script src="~/admin-tema/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/admin-tema/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>
